<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDEEE4"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Heading -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ¥— Healthy You Plan!"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="12dp" />

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Based on your profile and health goals:\nHereâ€™s your personalized Diet Plan"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textAlignment="center"
            android:layout_marginBottom="16dp" />

        <!-- User Info Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background_calorie"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:elevation="4dp">

            <!-- Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_name"
                    android:layout_marginEnd="12dp"
                    app:tint="#2E7D32" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name: Loading..."
                    android:textSize="16sp"
                    android:textColor="#2D4739" />
            </LinearLayout>

            <!-- Age -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_age"
                    android:layout_marginEnd="12dp"
                    app:tint="#2E7D32" />

                <TextView
                    android:id="@+id/tvAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Age: Loading..."
                    android:textSize="16sp"
                    android:textColor="#2D4739" />
            </LinearLayout>

            <!-- Gender -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_gender"
                    android:layout_marginEnd="12dp"
                    app:tint="#2E7D32" />

                <TextView
                    android:id="@+id/tvGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender: Loading..."
                    android:textSize="16sp"
                    android:textColor="#2D4739" />
            </LinearLayout>

            <!-- Height -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_height"
                    android:layout_marginEnd="12dp"
                    android:tint="#2E7D32"
                    tools:ignore="UseAppTint" />

                <TextView
                    android:id="@+id/tvHeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Height: Loading..."
                    android:textSize="16sp"
                    android:textColor="#2D4739" />
            </LinearLayout>

            <!-- Weight -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_weight"
                    android:layout_marginEnd="12dp"
                    app:tint="#2E7D32" />

                <TextView
                    android:id="@+id/tvWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weight: Loading..."
                    android:textSize="16sp"
                    android:textColor="#2D4739" />
            </LinearLayout>

            <!-- Goal Weight -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_weight"
                    android:layout_marginEnd="12dp"
                    app:tint="#2E7D32" />

                <TextView
                    android:id="@+id/tvGoalWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Goal Weight: Loading..."
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Activity Level -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_level"
                    android:layout_marginEnd="12dp"
                    app:tint="#2E7D32" />

                <TextView
                    android:id="@+id/tvActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Activity level: Loading..."
                    android:textSize="16sp"
                    android:textColor="#2D4739" />
            </LinearLayout>

            <!-- Allergy -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_allergy"
                    android:layout_marginEnd="12dp"
                    app:tint="#2E7D32" />

                <TextView
                    android:id="@+id/tvAllergy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Allergy: Loading..."
                    android:textSize="16sp"
                    android:textColor="#2D4739" />
            </LinearLayout>

            <!-- Generate Button -->
            <Button
                android:id="@+id/btnGenerate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Generate Diet Plan"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <!-- Result Heading -->
            <TextView
                android:id="@+id/tvResultHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ¨ Here's your Diet Plan:"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#2E7D32"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <!-- Result Box -->
            <TextView
                android:id="@+id/tvResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/result_box"
                android:padding="16dp"
                android:textColor="#333333"
                android:textSize="16sp"
                android:visibility="gone"
                android:elevation="4dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
