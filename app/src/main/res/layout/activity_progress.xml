<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#DDEEE4">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <!-- Progress Circle -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:gravity="center">

            <!-- Heading -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="Track your Progress"
                android:textColor="#2E7D32"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Circle Progress -->
            <com.github.lzyzsd.circleprogress.ArcProgress
                android:id="@+id/arcProgress"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_centerInParent="true"
                android:layout_below="@id/tvHeading"
                app:arc_bottom_text="Current Weight"
                app:arc_finished_color="@android:color/holo_blue_light"
                app:arc_stroke_width="12dp"
                app:arc_unfinished_color="@android:color/darker_gray" />
            <TextView
                android:id="@+id/tvHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="Track your Progress"
                android:textColor="#2E7D32"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Center Lost/Gained Weight -->
            <TextView
                android:id="@+id/tvWeightLost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="0 kg lost"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <!-- Left Initial Weight -->
            <TextView
                android:id="@+id/tvInitialWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="32dp"
                android:text="Initial: 0 kg"
                android:textSize="14sp"
                android:textColor="#333333" />

            <!-- Right Goal Weight -->
            <TextView
                android:id="@+id/tvGoalWeightCircle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="32dp"
                android:text="Goal: 0 kg"
                android:textSize="14sp"
                android:textColor="#333333" />

            <!-- Current Weight -->
            <TextView
                android:id="@+id/tvCurrentWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Current: 0 kg"
                android:textSize="14sp"
                android:textColor="#000000" />

        </RelativeLayout>

        <!-- Add Weight Button -->
        <Button
            android:id="@+id/btnAddWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Weight"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Heading -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PROGRESS "
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#2E7D32"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="32dp" />

            <!-- User Info Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background_calorie"
                android:padding="16dp"
                android:layout_marginBottom="24dp"
                android:elevation="4dp">

                <!-- Name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_name"
                        android:layout_marginEnd="12dp"
                        app:tint="#2E7D32" />

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name: Loading..."
                        android:textSize="16sp"
                        android:textColor="#2D4739" />
                </LinearLayout>

                <!-- Age -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_age"
                        android:layout_marginEnd="12dp"
                        app:tint="#2E7D32" />

                    <TextView
                        android:id="@+id/tvAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Age: Loading..."
                        android:textSize="16sp"
                        android:textColor="#2D4739" />
                </LinearLayout>

                <!-- Gender -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_gender"
                        android:layout_marginEnd="12dp"
                        app:tint="#2E7D32" />

                    <TextView
                        android:id="@+id/tvGender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender: Loading..."
                        android:textSize="16sp"
                        android:textColor="#2D4739" />
                </LinearLayout>

                <!-- Height -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_height"
                        android:layout_marginEnd="12dp"
                        app:tint="#2E7D32"
                        tools:ignore="UseAppTint" />

                    <TextView
                        android:id="@+id/tvHeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Height: Loading..."
                        android:textSize="16sp"
                        android:textColor="#2D4739" />
                </LinearLayout>

                <!-- Weight -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_weight"
                        android:layout_marginEnd="12dp"
                        app:tint="#2E7D32" />

                    <TextView
                        android:id="@+id/tvWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weight: Loading..."
                        android:textSize="16sp"
                        android:textColor="#2D4739" />
                </LinearLayout>

                <!-- Goal Weight -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_weight"
                        android:layout_marginEnd="12dp"
                        app:tint="#2E7D32" />
                    <TextView
                        android:id="@+id/tvGoalWeightInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Goal Weight: Loading..."
                        android:textSize="16sp"
                        android:textColor="#000000" />

                </LinearLayout>

                <!-- Activity Level -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_level"
                        android:layout_marginEnd="12dp"
                        app:tint="#2E7D32" />

                    <TextView
                        android:id="@+id/tvActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Activity level: Loading..."
                        android:textSize="16sp"
                        android:textColor="#2D4739" />
                </LinearLayout>

                <!-- Allergy -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_allergy"
                        android:layout_marginEnd="12dp"
                        app:tint="#2E7D32" />

                    <TextView
                        android:id="@+id/tvAllergy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Allergy: Loading..."
                        android:textSize="16sp"
                        android:textColor="#2D4739" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
