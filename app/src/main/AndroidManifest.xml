        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Dummy"
        tools:targetApi="31">

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_logo" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/notification_color"/>




        <activity
            android:name=".CustomMarkerView"
            android:exported="false"
            />
        <activity
            android:name=".ProgressActivity"
            android:exported="false" />
        <activity
            android:name=".CalorieActivity"
            android:exported="false" />
        <activity
            android:name=".CalorieActivity"
            android:exported="false" />
        <activity
            android:name=".HomeActivity"
            android:exported="false" />
        <activity
            android:name=".MealActivity"
            android:exported="false" />
        <activity
            android:name=".HydrationActivity"
            android:exported="false" />
        <activity
            android:name=".BmiActivity"
            android:exported="false" />
        <activity
            android:name=".PremiumActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar.FullScreen">
            <!-- Other activity attributes -->
        </activity>
        <activity
            android:name=".BasicInformationActivity"
            android:exported="false" /> <!-- Correct placement of SplashActivity -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"> <!-- launcher activity banani ho to exported true karo -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUpActivity" />
        <activity android:name=".SignInActivity" />



        <service
            android:name=".MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>


    </application>

</manifest>